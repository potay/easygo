{
  "manifest_version": 2,
  "name": "EasyGo",
  "version": "0.2",

  "default_locale": "en",
  "description": "Create custom url redirects rules.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "browser_action": {
    "default_popup": "popup.html"
  },

  "author": "Paul Chun",
  "background": {
    "scripts": [ "background.js" ],
    "persistent": false
  },
  "homepage_url": "http://paulchun.com",
  "incognito": "spanning or split",
  "minimum_chrome_version": "17",
  "offline_enabled": true,
  "options_page": "popup.html",
  "permissions": [
    "storage",
    "webRequest",
    "webRequestBlocking",
    "<all_urls>"
  ],
  "short_name": "EasyGo",
  "version_name": "0.2 alpha",
}
